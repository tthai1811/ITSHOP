@model IEnumerable<ITShop.Models.LoaiSanPham>
@using SlugGenerator

<li class="nav-item dropdown">
    <a class="nav-link dropdown-toggle" asp-area="" asp-controller="SanPham" asp-action="Index" data-bs-toggle="dropdown" data-bs-auto-close="outside"><i class="ci-gift me-2"></i>Sản phẩm</a>
    <ul class="dropdown-menu">
        @foreach (var item in Model)
        {
            <li><a class="dropdown-item" asp-area="" asp-controller="SanPham" asp-action="PhanLoai" asp-route-tenLoai="@item.TenLoai.GenerateSlug()">@item.TenLoai</a></li>
        }
    </ul>
</li>