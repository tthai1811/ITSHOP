@model ITShop.Models.DatHang

@{
    ViewData["Title"] = "Thêm đặt hàng";
}

<div class="card">
    <h5 class="card-header">@ViewData["Title"]</h5>
    <div class="card-body">
        <form asp-action="Create">
            <div class="mb-3">
                <label asp-for="NguoiDungID" class="control-label"></label>
                <select asp-for="NguoiDungID" class ="form-control" asp-items="ViewBag.NguoiDungID">
                    <option value="">-- Chọn --</option>v
                </select>
            </div>
            
            <div class="mb-3">
                <label asp-for="TinhTrangID" class="control-label"></label>
                <select asp-for="TinhTrangID" class ="form-control" asp-items="ViewBag.TinhTrangID">
                    <option value="">-- Chọn --</option>
                </select>
            </div>
            
            <div class="mb-3">
                <label asp-for="DienThoaiGiaoHang" class="control-label"></label>
                <input asp-for="DienThoaiGiaoHang" class="form-control" />
                <span asp-validation-for="DienThoaiGiaoHang" class="text-danger"></span>
            </div>
            
            <div class="mb-3">
                <label asp-for="DiaChiGiaoHang" class="control-label"></label>
                <input asp-for="DiaChiGiaoHang" class="form-control" />
                <span asp-validation-for="DiaChiGiaoHang" class="text-danger"></span>
            </div>
            
            <div class="mb-3">
                <label asp-for="NgayDatHang" class="control-label"></label>
                <input asp-for="NgayDatHang" class="form-control" />
                <span asp-validation-for="NgayDatHang" class="text-danger"></span>
            </div>
            
            <div class="mb-0">
                <button type="submit" class="btn btn-primary"><i class="fa-light fa-floppy-disk"></i> Thêm mới</button> hoặc <a asp-action="Index">Quay về danh sách</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}